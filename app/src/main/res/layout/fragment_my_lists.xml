<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.karrar.movieapp.ui.myList.MyListsViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.myList.MyListsFragment">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/saved_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:overScrollMode="never"
            android:paddingTop="@dimen/spacing_medium"
            app:items="@{viewModel.createdListUIState.createdList}"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:listitem="@layout/item_saved_list" />


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floating_action_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            style="@style/FABStyle"
            android:onClick="@{()->viewModel.onCreateList()}"
            app:backgroundTint="@color/primary_brand_color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/ic_outline_plus"
            app:tint="@color/onPrimary_Button_color" />


        <!-- Login -->

        <ImageView
            android:id="@+id/vector_image"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/circle_disabled"
            android:padding="18dp"
            app:layout_constraintVertical_chainStyle="packed"
            android:src="@drawable/ic_login"
            app:tint="@color/primary_brand_color"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/text_message_wrong_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/text_message_wrong_title"
            style="@style/Medium.Medium.Primary"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_medium"
            android:text="@string/login_title"
            app:layout_constraintBottom_toTopOf="@id/text_message_wrong"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/vector_image" />

        <TextView
            android:id="@+id/text_message_wrong"
            style="@style/Medium.Small.Secondary"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_small"
            android:gravity="center"
            android:text="@string/login_description"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/button_login"
            app:layout_constraintTop_toBottomOf="@id/text_message_wrong_title" />

        <Button
            android:id="@+id/button_login"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_rounded"
            android:paddingVertical="12dp"
            android:textAllCaps="false"
            android:layout_marginTop="@dimen/spacing_large"
            android:onClick="@{() -> viewModel.onLoginClicked()}"
            android:text="@string/login"
            android:textColor="@color/onPrimary_Button_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_message_wrong" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/succces_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="
                    saved_list,
                    floating_action_button"
            app:error="@{viewModel.createdListUIState.error}"
            app:loading="@{viewModel.createdListUIState.loading}" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/needLoginGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="
            text_message_wrong,
            vector_image,
            text_message_wrong_title,
            button_login"
            app:showWhenNoLogin="@{viewModel.createdListUIState.error}" />


        <ProgressBar
            android:id="@+id/loading"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:indeterminateDrawable="@drawable/loading_shape"
            app:isVisible="@{viewModel.createdListUIState.loading}"
            />


        <!--        error -->

        <ImageView
            android:id="@+id/animation_lost_connection"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/circle_red"
            android:padding="18dp"
            app:layout_constraintVertical_chainStyle="packed"
            app:tint="@color/primary_red_color"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/title_lost_connection"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/ic_network" />

        <TextView
            android:id="@+id/title_lost_connection"
            style="@style/Medium.Medium.Primary"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_medium"
            android:text="@string/oops"
            app:layout_constraintBottom_toTopOf="@id/description_lost_connection"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/animation_lost_connection" />

        <TextView
            android:id="@+id/description_lost_connection"
            style="@style/Medium.Small.Secondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_small"
            android:gravity="center"
            android:text="@string/description"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/button_retry"
            app:layout_constraintTop_toBottomOf="@id/title_lost_connection" />

        <Button
            android:id="@+id/button_retry"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_rounded"
            android:paddingVertical="12dp"
            android:textAllCaps="false"
            android:layout_marginTop="@dimen/spacing_large"
            android:onClick="@{() -> viewModel.getData()}"
            android:text="@string/retry"
            android:textColor="@color/onPrimary_Button_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/description_lost_connection" />


        <androidx.constraintlayout.widget.Group
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="title_lost_connection,animation_lost_connection,description_lost_connection,button_retry"
            app:showWhenNoInternet="@{viewModel.createdListUIState.error}" />


        <!--        empty List          -->

        <ImageView
            android:id="@+id/no_data"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/circle_disabled"
            android:padding="18dp"
            android:src="@drawable/ic_video_library"
            app:layout_constraintBottom_toTopOf="@+id/title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            app:tint="@color/primary_brand_color" />

        <TextView
            android:id="@+id/title"
            style="@style/Medium.Medium.Primary"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_medium"
            android:text="@string/no_collections"
            app:layout_constraintBottom_toTopOf="@id/description_empty_list"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/no_data" />

        <TextView
            android:id="@+id/description_empty_list"
            style="@style/Medium.Small.Secondary"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_small"
            android:gravity="center"
            android:text="@string/no_collections_description"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/button_start_collecting"
            app:layout_constraintTop_toBottomOf="@id/title" />

        <Button
            android:id="@+id/button_start_collecting"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_rounded"
            android:paddingVertical="12dp"
            android:textAllCaps="false"
            android:layout_marginTop="@dimen/spacing_large"
            android:onClick="@{() -> viewModel.onStartCollectingClicked()}"
            android:text="@string/start_collecting"
            android:textColor="@color/onPrimary_Button_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/description_empty_list" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/empty_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="description_empty_list,title,no_data,button_start_collecting"
            app:isListEmpty="@{viewModel.createdListUIState.isEmpty}" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>