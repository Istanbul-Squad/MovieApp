<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewmodel"
            type="com.karrar.movieapp.ui.home.HomeViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_logo"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginVertical="12dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_welcome"
            style="@style/Font_Body_SM.Regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/welcome"
            android:textColor="@color/secondary_shade_color"
            app:layout_constraintBottom_toTopOf="@id/text_name"
            app:layout_constraintStart_toEndOf="@id/image_logo"
            app:layout_constraintTop_toTopOf="@id/image_logo"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/text_name"
            style="@style/Font_Title.SM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@{viewmodel.homeUiState.user.name}"
            tools:text="Mustafa Ahmed"
            android:textColor="@color/primary_shade_color"
            app:layout_constraintBottom_toBottomOf="@id/image_logo"
            app:layout_constraintStart_toEndOf="@id/image_logo"
            app:layout_constraintTop_toBottomOf="@id/text_welcome" /> <!-- TODO -->

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>