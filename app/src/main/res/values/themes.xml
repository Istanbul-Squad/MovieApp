<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MovieApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/primary_brand_color</item>
        <item name="colorPrimaryVariant">@color/bottom_sheet_background_color</item>

        <item name="android:statusBarColor">@color/bottom_sheet_background_color</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

        <item name="textInputStyle">@style/Login</item>
        <item name="actionBarTheme">@style/MyTheme</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>

    </style>


    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_corners</item>
    </style>


    <style name="MyTheme" parent="@style/ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:background">@color/bottom_sheet_background_color</item>
        <item name="android:textColorPrimary">@color/primary_shade_color</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="contentInsetStart">0dp</item>
    </style>


    <style name="SemiBold">
        <item name="android:fontFamily">@font/manrope_semibold</item>
        <item name="android:textColor">@color/primary_shade_color</item>
    </style>

    <style name="SemiBold.Large">
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="SemiBold.Medium">
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name="SemiBold.Small">
        <item name="android:textSize">@dimen/text_small</item>
    </style>


    <style name="Regular">
        <item name="android:fontFamily">@font/manrope_regular</item>
    </style>

    <style name="Regular.Medium">
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name="Regular.Medium.Primary">
        <item name="android:textColor">@color/primary_shade_color</item>
    </style>

    <style name="Regular.Medium.Secondary">
        <item name="android:textColor">@color/secondary_shade_color</item>
    </style>
    <style name="Regular.label_md">
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="Regular.Small">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">@color/primary_shade_color</item>
    </style>

    <style name="Regular.Small.Secondary">
        <item name="android:textColor">@color/secondary_shade_color</item>
    </style>

    <style name="Regular.Small.ternary">
        <item name="android:textColor">@color/ternary_shade_color</item>
    </style>

    <style name="Medium">
        <item name="android:fontFamily">@font/manrope_medium</item>
        <item name="android:textColor">@color/primary_shade_color</item>
    </style>

    <style name="Medium.Title_xl">
        <item name="android:textSize">@dimen/text_xl</item>
    </style>

    <style name="Medium.Medium">
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:fontWeight">500</item>
    </style>

    <style name="Medium.Medium.Primary">
        <item name="android:textColor">@color/primary_shade_color</item>
    </style>

    <style name="Medium.Medium.Secondary">
        <item name="android:textColor">@color/secondary_shade_color</item>
    </style>


    <style name="Medium.Small">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">@color/primary_shade_color</item>
    </style>

    <style name="Medium.Small.Secondary">
        <item name="android:textColor">@color/secondary_shade_color</item>
    </style>

    <style name="Medium.Small.ternary">
        <item name="android:textColor">@color/ternary_shade_color</item>
    </style>

    <!--new font and text size-->
    <!--  Display -->
    <style name="Font_Display_XL">
        <item name="android:fontFamily">@font/manrope_semibold</item>
        <item name="android:textSize">@dimen/text_display_xl</item>
    </style>

    <!--  Titles  -->
    <style name="Font_Title">
        <item name="android:fontFamily">@font/manrope_medium</item>
    </style>

    <style name="Font_Title.XL" parent="Font_Title">
        <item name="android:textSize">@dimen/text_title_xl</item>
    </style>

    <style name="Font_Title.LG" parent="Font_Title">
        <item name="android:textSize">@dimen/text_title_lg</item>
    </style>

    <style name="Font_Title.MD" parent="Font_Title">
        <item name="android:textSize">@dimen/text_title_md</item>
    </style>

    <style name="Font_Title.SM" parent="Font_Title">
        <item name="android:textSize">@dimen/text_title_sm</item>
    </style>

    <!-- Body -->

    <style name="Font_Body_LG">
        <item name="android:textSize">@dimen/text_body_lg</item>
    </style>
    <style name="Font_Body_MD">
        <item name="android:textSize">@dimen/text_body_md</item>
    </style>
    <style name="Font_Body_SM">
        <item name="android:textSize">@dimen/text_body_sm</item>
    </style>

    <style name="Font_Label_MD">
        <item name="android:textSize">@dimen/text_label_md</item>
    </style>

    <!-- Body LG -->
    <style name="Font_Body_LG.Regular" parent="Font_Body_LG">
        <item name="android:fontFamily">@font/manrope_regular</item>
    </style>

    <style name="Font_Body_LG.Medium" parent="Font_Body_LG">
        <item name="android:fontFamily">@font/manrope_medium</item>
    </style>

    <style name="Font_Body_LG.SemiBold" parent="Font_Body_LG">
        <item name="android:fontFamily">@font/manrope_semibold</item>
    </style>

    <!-- Body MD -->
    <style name="Font_Body_MD.Regular" parent="Font_Body_MD">
        <item name="android:fontFamily">@font/manrope_regular</item>
    </style>

    <style name="Font_Body_MD.Medium" parent="Font_Body_MD">
        <item name="android:fontFamily">@font/manrope_medium</item>
    </style>

    <style name="Font_Body_MD.SemiBold" parent="Font_Body_MD">
        <item name="android:fontFamily">@font/manrope_semibold</item>
    </style>

    <!-- Body SM -->
    <style name="Font_Body_SM.Regular" parent="Font_Body_SM">
        <item name="android:fontFamily">@font/manrope_regular</item>
    </style>

    <style name="Font_Body_SM.Medium" parent="Font_Body_SM">
        <item name="android:fontFamily">@font/manrope_medium</item>
    </style>

    <style name="Font_Body_SM.SemiBold" parent="Font_Body_SM">
        <item name="android:fontFamily">@font/manrope_semibold</item>
    </style>

    <!--  Label -->

    <style name="Font_Label_MD.Regular" parent="Font_Label_MD">
        <item name="android:fontFamily">@font/manrope_regular</item>
    </style>

    <style name="Font_Label_MD.Medium" parent="Font_Label_MD">
        <item name="android:fontFamily">@font/manrope_medium</item>
    </style>

    <style name="Font_Label_MD.SemiBold" parent="Font_Label_MD">
        <item name="android:fontFamily">@font/manrope_semibold</item>
    </style>


    <style name="CardCorners">
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="CardCorners.Small">
        <item name="cornerSize">@dimen/radius_small</item>
    </style>

    <style name="CustomCornerShape" parent="">
        <item name="cornerSizeTopLeft">12dp</item>
        <item name="cornerSizeTopRight">12dp</item>
        <item name="cornerSizeBottomLeft">12dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="CardCorners.Medium">
        <item name="cornerSize">@dimen/radius_medium</item>
    </style>

    <style name="CardCorners.Image_item_cast">
        <item name="cornerSizeTopLeft">@dimen/radius_xl</item>
        <item name="cornerSizeTopRight">@dimen/radius_sm</item>
        <item name="cornerSizeBottomRight">@dimen/radius_xl</item>
        <item name="cornerSizeBottomLeft">@dimen/radius_sm</item>

    </style>

    <style name="Login" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColorHint">@color/secondary_shade_color</item>
        <item name="boxBackgroundColor">@color/primary_Button_color</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxCornerRadiusTopStart">@dimen/radius_small</item>
        <item name="boxCornerRadiusTopEnd">@dimen/radius_small</item>
        <item name="boxCornerRadiusBottomStart">@dimen/radius_small</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/radius_small</item>
        <item name="hintTextAppearance">@style/Regular.Medium.Primary</item>
        <item name="startIconTint">@color/secondary_shade_color</item>
        <item name="helperTextEnabled">true</item>
        <item name="helperTextTextColor">@color/design_default_color_error</item>
        <item name="errorEnabled">true</item>

    </style>

    <style name="Theme.MovieApp.SplashScreen" parent="Theme.SplashScreen.IconBackground">
        <item name="postSplashScreenTheme">@style/Theme.MovieApp</item>
        <item name="windowSplashScreenBackground">@color/bottom_sheet_background_color</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
    </style>

    <style name="CircleImage">
        <item name="cornerSize">50%</item>
    </style>


    <style name="CardCorners.BottomMedium">
        <item name="cornerSizeBottomLeft">@dimen/radius_medium</item>
        <item name="cornerSizeBottomRight">@dimen/radius_medium</item>
    </style>


    <style name="Circle">
        <item name="cornerSize">50%</item>
    </style>

    <style name="Chip.Regular.Small" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipStrokeColor">@color/chip_stroke</item>
        <item name="chipBackgroundColor">@color/chip_background</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:textAlignment">center</item>
    </style>


    <style name="chipChip" parent="Widget.Material3.Chip.Suggestion">
        <item name="chipStrokeColor">@color/primary_brand_color</item>
        <item name="chipSurfaceColor">@color/secondary_shade_color</item>
        <item name="chipStrokeWidth">@dimen/cardview_compat_inset_shadow</item>
    </style>

    <style name="Colors_Widget.MaterialComponents.Chip.Choice" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/selector_chip_background</item>
        <item name="chipStrokeColor">@color/selector_chip_stroke</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:textColor">@color/selector_chip_text</item>
        <item name="chipCornerRadius">8dp</item>
    </style>


    <style name="Regular.Small.Primary">
        <item name="android:textColor">@color/primary_shade_color</item>

    </style>


</resources>